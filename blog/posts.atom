---
siteurl: http://dottedmag.net
sitetitle: dottedmag's
---
<feed xmlns="http://www.w3.org/2005/Atom" xmlns:thr="http://purl.org/syndication/thread/1.0">
  <id>{{ page.siteurl }}/</id>
  <title>{{ page.sitetitle }}</title>
  {% capture latest_post %}{{ site.posts | last }}{% endcapture %}
  <updated>{{ site.time | date:"%Y-%m-%dT%H:%M:%SZ" }}</updated>
  <author>
    <name>Mikhail Gusarov</name>
  </author>
  <link href="{{ page.siteurl }}/" rel="alternate"></link>
  <link href="{{ page.siteurl }}/blog/posts.atom" rel="self"></link>
{% for post in site.posts limit:5 %}
  <entry>
    <id>{{ page.siteurl }}{{ post.url }}</id>
    <title type="html">{{ post.title|escape }}</title>
    <updated>{{ post.date|date:"%Y-%m-%dT%H:%M:%SZ" }}</updated>
    <published>{{ post.date|date:"%Y-%m-%dT%H:%M:%SZ" }}</published>
    {% for tag in post.tags %}
    <category term="{{ tag }}"></category>
    {% endfor %}
    <link href="{{ page.siteurl }}{{ post.url }}" rel="alternate"></link>
    <content type="html">{{ post.excerpt|escape }}</content>
  </entry>
{% endfor %}
</feed>
